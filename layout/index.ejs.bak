<section class="posts">
    <% page.posts.each(function (post) { %>
    <article class="post">
        <div class="post-title">
            <a class="post-title-link" href="<%- url_for(post.path) %>"><%- post.title %></a>
        </div>
        <div class="post-content">
            <% if (theme.excerpt) { %>
            <%- post.excerpt %>
            <a class="More" href="<%- url_for(post.path) %>"><%= __('More') %></a>
            <% } else { %>
            <%- post.content %>
            <% } %>
        </div>
        <div class="post-meta">
            <%
                const dat = date(post.date, "YYYY/MM/DD");
                const chinese_date = to_chinese_date(dat);
                const result = theme.to_chinese_date ? chinese_date : dat;
            %>
            <span class="post-time"><%- result %></span>
        </div>
    </article>
    <% }) %>
</section>
<%- partial('_partial/paginator') %>